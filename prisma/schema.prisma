datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:admin@localhost:5432/db_equilibra"
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id           Int      @id @default(autoincrement())
  usuario      String   @unique
  contrasena   String
  tipoUsuario  String   // 'P' para paciente, 'R' para profesional, 'A' para administrador
  Paciente     Paciente?
  Profesional  Profesional?
}

model Paciente {
  id           Int       @id @default(autoincrement())
  nombres      String
  apellidos    String
  dni          String    @unique
  usuarioId    Int       @unique
  usuario      Usuario   @relation(fields: [usuarioId], references: [id])
  citas        Cita[]
  resultados   ResultadoTest[]
}

model Profesional {
  id           Int       @id @default(autoincrement())
  nombres      String
  apellidos    String
  identificacion String  @unique
  especialidad String
  usuarioId    Int       @unique
  usuario      Usuario   @relation(fields: [usuarioId], references: [id])
  citas        Cita[]
  pagos        Pago[]
}

model Cita {
  id           Int       @id @default(autoincrement())
  fecha        DateTime
  hora         DateTime
  pacienteId   Int
  profesionalId Int
  paciente     Paciente   @relation(fields: [pacienteId], references: [id])
  profesional  Profesional @relation(fields: [profesionalId], references: [id])
}

model ResultadoTest {
  id           Int       @id @default(autoincrement())
  resultado    String
  pacienteId   Int
  paciente     Paciente   @relation(fields: [pacienteId], references: [id])
}

model Pago {
  id           Int       @id @default(autoincrement())
  fechaPago    DateTime
  monto        Float
  profesionalId Int
  profesional  Profesional @relation(fields: [profesionalId], references: [id])
}
